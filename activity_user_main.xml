<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.User_main"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"

            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="SaleV"
                android:fontFamily="@font/ethnocentric"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:elevation="20dp"
                android:padding="0sp"
                />
            <!-- apbar và searchview đặt trong 1 coodinator-->
            <com.google.android.material.appbar.AppBarLayout
                android:backgroundTint="@color/blue_mid"
                android:paddingHorizontal="20dp"
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bottom_corner"
                app:layout_scrollFlags="noScroll|enterAlwaysCollapsed"
                android:layout_marginBottom="80dp"
                >

                <androidx.appcompat.widget.SearchView
                    android:scrollingCache="true"
                    android:iconifiedByDefault="true"
                    style="@style/cursorColor"
                    android:layoutDirection="rtl"
                    android:elevation="0dp"
                    android:layout_marginTop="20dp"
                    app:queryHint="Sản phẩm bạn muốn tìm"
                    app:iconifiedByDefault="true"
                    app:layout_scrollFlags="enterAlways|scroll"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/search"
                    android:background="@drawable/searchbar_outline"
                    android:layout_marginRight="5dp"
                    />
            </com.google.android.material.appbar.AppBarLayout>
            <androidx.core.widget.NestedScrollView
                android:overScrollMode="always"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:id="@+id/dummyview"/>
                    <androidx.cardview.widget.CardView
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="16dp">

                        <com.denzcoskun.imageslider.ImageSlider
                            android:id="@+id/image_slider"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            app:iss_auto_cycle="true"
                            app:iss_delay="2000"
                            app:iss_period="2000"
                            app:iss_text_align="CENTER"
                            app:iss_title_background="@drawable/transparent" />
                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:paddingLeft="7dp"
                        android:clipToPadding="false"
                        android:layout_marginTop="20dp"
                        android:id="@+id/thuonghieuRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"/>
                    <com.google.android.material.tabs.TabLayout
                        android:layout_marginHorizontal="20dp"
                        app:tabTextAppearance="@style/TabTextStyle"
                        app:tabIndicatorColor="@color/black"
                        app:tabSelectedTextColor="@color/black"
                        app:tabMaxWidth="120dp"
                        app:tabMode="scrollable"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabTextColor="@color/black"
                        android:id="@+id/tabsp"/>
                    <androidx.viewpager2.widget.ViewPager2
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Đã hết nội dung!"
                            android:textAlignment="center"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <com.google.android.material.bottomappbar.BottomAppBar
                app:hideOnScroll="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/bottom"
                android:layout_gravity="bottom"
                android:background="@color/blue_mid"
                android:backgroundTint="@color/blue_mid"
                app:elevation="20dp"
                app:itemIconTint="@drawable/custon_user_menu"
                app:itemTextColor="@color/white"
                app:layout_scrollFlags="enterAlways|scroll">
                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottomAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:menu="@menu/usermenu"
                    android:background="@drawable/transparent"
                    app:itemIconTint="@drawable/custon_user_menu"
                    app:itemTextColor="@color/white"
                    app:layout_scrollFlags="enterAlways|scroll"/>

            </com.google.android.material.bottomappbar.BottomAppBar>



        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <!--    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#80000000"
            android:id="@+id/overlay"
            android:visibility="gone"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:id="@+id/progress"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imgoverlay"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/check"
            android:elevation="200dp"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:id="@+id/searchview"
            android:elevation="30dp"
            android:background="@drawable/bottom_corner"
            android:backgroundTint="@color/blue_mid"
            android:layout_marginHorizontal="20dp"
            android:visibility="gone">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchList"/>
        </LinearLayout>

    </FrameLayout>
<!--    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        >-->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/user_setting_menu"
        app:itemTextColor="@color/white"
        android:layout_gravity="right"
        android:id="@+id/navigation"
        android:background="@color/blue_main"
        app:itemIconTint="@color/white"/>

</androidx.drawerlayout.widget.DrawerLayout>