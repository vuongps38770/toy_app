        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">serif</item>
        <item name="colorPrimary">@color/yellow_main</item>
        <item name="colorControlActivated">@color/yellow_secondary</item> <!-- Màu khi bật -->
        <item name="colorControlNormal">@color/black</item>    <!-- Màu khi tắt -->
        <item name="colorSwitchThumbNormal">@color/yellow_main</item>

